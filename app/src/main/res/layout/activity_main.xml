<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="16dp">


    <!-- Current Lap verisini göstermek için TextView -->

    <!-- Prev Lap verilerini listelemek için ListView -->

    <TextView
        android:id="@+id/textViewCurrentLap"
        android:layout_width="210dp"
        android:layout_height="165dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="188dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Current Lap: -"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/listViewPrevLap"
        android:layout_width="325dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="339dp"
        android:layout_marginBottom="36dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:padding="24dp" />

    <TextView
        android:id="@+id/textViewPitArea"
        android:layout_width="656dp"
        android:layout_height="143dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="0dp"
        android:background="#3F51B5"
        android:gravity="center"
        android:text="PIT"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />


</RelativeLayout>
